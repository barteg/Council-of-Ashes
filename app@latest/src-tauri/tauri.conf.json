{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "council-of-ashes-desktop",
  "version": "0.1.0",
  "identifier": "com.councilofashes.desktop",
  "build": {
    "beforeDevCommand": "bash -c \"../start_flask.sh\"",
    "beforeBuildCommand": "bash -c \"../start_flask.sh\""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "council-of-ashes-desktop",
        "width": 800,
        "height": 600,
        "url": "http://10.0.1.38:5000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
